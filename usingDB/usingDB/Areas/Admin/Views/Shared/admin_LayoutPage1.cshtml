<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark ">
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Categories/index">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Brands/index">Brands</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Products/index">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Users/index">Users</a>
                </li>
                @if (User.Identity.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">Login</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        @*<a class="nav-link" href="/Account/MyProfile">MyProfile</a>*@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                }
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-white">
                Welcome to  @User.Identity.Name
                @*@ViewBag.Message*@
            </div>
        }
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
