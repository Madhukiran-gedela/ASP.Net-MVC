<h2>Products</h2>
    <form class="form-check-inline" action="/admin/products/index">
<table>
    <tr>
        <td>@Html.Label("Search", new {@class= "mr-1" })</td>
        <td>@Html.TextBox("Search", ViewBag.search as string, new { @class = "form-control-1", placeholder = "search" })</td>
