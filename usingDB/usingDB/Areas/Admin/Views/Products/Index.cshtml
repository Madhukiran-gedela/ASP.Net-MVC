    @foreach (var item in Model)
        {
            <tr>
                <td><img src="data:image;base64,@item.Photo" style="width:100px" /></td>
                <td>@Html.DisplayFor(temp => item.ProductID)</td>
                <td>@Html.DisplayFor(temp => item.ProductName)</td>
                <td>@Html.DisplayFor(temp => item.Price)</td>
                <td>@Html.DisplayFor(temp => item.DateOfPurchase)</td>
                <td>@Html.DisplayFor(temp => item.AvailabilityStatus)</td>
                <td>
                    @if(item.Category !=null)
                {
                    <span>@item.Category.CategoryName</span>
                }
                </td>
                @*<td>@item.CategoryID</td>*@
            <td>
                @if (item.Brand != null)
                {
                <span>@item.Brand.BrandName</span>
                }
            </td>
                <td>@item.Active</td>
                <td>
                   <button type="button" class="btn btn-info btn-sm ">
                       @Html.ActionLink("Details", "Details", new {id = item.ProductID,Controller = "Products",area = "Admin"})
                        @*<a class="text-white" href="/products/details/@item.ProductID">Details</a>*@
                        </button>
                    </td>
                <td>
                    <button class="btn btn-warning  btn-sm">
                        @Html.ActionLink("edit", "edit", new {id = item.ProductID,Controller = "Products", area = "Admin" })
                        @*<a class="text-white" href="/products/edit/@item.ProductID">Edit</a>*@
                    </button>
                </td>
                <td>
                    <button class="btn btn-danger btn-sm">
                        @Html.ActionLink("Delete", "delete", new { id = item.ProductID, Controller = "Products", area = "Admin" })
                        @*<a class="text-white"href="/products/delete/@item.ProductID">Delete</a>*@
                    </button>
                </td>
                </tr>
        }
        <tr>
            <td colspan = "9">
                @{ 
                    int PrevPageNo = ViewBag.PageNo - 1;
                    if (PrevPageNo<=0)
                    {
                        PrevPageNo = 1;
                    }
                    int NextPageNo = ViewBag.PageNo + 1;
                    if (NextPageNo > ViewBag.NoOfPage)
                    {
                        NextPageNo = ViewBag.NoOfPages;
                    }
                   }
                <ul class="pagination justify-content-center ">
                    <li class="page-item active">
                        <a class="page-link" href="/admin/products/index?SortColumn&IconClass=@ViewBag.IconClass&PageNo=@PrevPageNo">Prev</a>
                    </li>
                    @for (int i = 0; i < ViewBag.NoOfPages; i++)
                    {
                        if ((i + 1) == ViewBag.PageNo)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="/admin/products/index?SortColumn&IconClass=@ViewBag.IconClass&PageNo=@(i + 1)">@(i + 1)</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item pagination-hover">
                                <a class="page-link" href="/admin/products/index?SortColumn&IconClass=@ViewBag.IconClass&PageNo=@(i + 1)">@(i + 1)</a>

                            </li>
                        }
                    }
                <li class="page-item active">
                    <a class="page-link" href="admin/products/index?SortColumn&IconClass=@ViewBag.IconClass&PageNo=@NextPageNo">Next</a>
</li>

                </ul>
              
            </td>
        </tr>
