
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}
<div class="container-fluid"><br />
    
    <h2>Create a product</h2>
    <form action="/products/create" method="post">  
        <div class="row">
            <div class="form-group col-6">
                <label for=" ProductName">Product Name :</label>
                <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="ProductName">
            </div>
            <div class="form-group col-6">
                <label for="Price">Price :</label>
                <input type="number" class="form-control" id="Price" name="Price" placeholder="Price">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="Date of Purchase">Date of Purchase :</label>
                <input type="date" class="form-control" id="Date of Purchase" name="DateOfPurchase" placeholder="dd/mm/yyyy">
            </div>
            <div class="form-group col-6">
                <label for="Availabilty">Availability :</label>
                <input type="text" class="form-control" id="Ava" name="AvailabilityStatus" placeholder="status">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label for="CategoryID">Category ID:</label>
                <input type="text" class="form-control" id="Category" name="CategoryID" placeholder="Category ID">
            </div>
            <div class="form-group col-6">
                <label for="BrandID">BrandID:</label>
                <input type="text" class="form-control" id="BrandID" name="BrandID" placeholder="Brand ID">
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-danger" href="/products/index">cancel</a>
    </form>
        </div>